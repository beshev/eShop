@model AllTemplatesViewModel
@inject IHtmlSanitizer sanitizer

@{
    this.ViewData[GlobalConstants.Title] = this.Model.Category.Name;
}

@if (this.Model.Templates.Any())
{
    <div class="mb-2 col-lg-6 col-md-6 offset-lg-3 offset-md-3 col-sm-12 col-12">
        <div class="card p-1 cardHover">
            <svg xmlns="http://www.w3.org/2000/svg" class="" width="100%" height="100%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                <rect width="100%" height="100%" fill="#FFFFFF"></rect>
                <image href="@this.Model.Category.ImageUrl" height="100%" width="100%"></image>
            </svg>
            <div class="card-body p-1 text-center">
                <p class="h4">@this.Model.Category.Name</p>
            </div>
        </div>
    </div>
    <div class="col-lg-9 mt-3">
        <h1 class="text-center">Модели</h1>
        <div class="row">
            @foreach (var template in this.Model.Templates)
            {
                <div class="mb-2 col-lg-4 col-sm-12 col-12">
                    <a asp-area="" asp-controller="Templates" asp-action="Details" asp-route-templateId="@template.Id" asp-route-categoryId="@Model.Category.Id">
                        <div class="card p-1 cardHover">
                            <svg xmlns="http://www.w3.org/2000/svg" class="" width="100%" height="100%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                                <rect width="100%" height="100%" fill="#FFFFFF"></rect>
                                <image href="@template.ImageUrl" height="100%" width="100%"></image>
                            </svg>
                            <div class="card-body p-1">
                                @if (template.ImagesCount > 0 && template.HasCustomText)
                                {
                                    <text>Към този модел може да добавите снимка(ки) и собствен текст</text>
                                    <p class="show-card-pading-template"></p>
                                }
                                else if (template.ImagesCount == 0 && template.HasCustomText)
                                {
                                    <text>Към този модел може да добавите собствен текст</text>
                                    <p class="show-card-pading"></p>
                                }
                                else if (template.ImagesCount > 0 && template.HasCustomText == false)
                                {
                                    <text>Към този модел може да добавите снимка(ки)</text>
                                    <p class="show-card-pading"></p>
                                }
                                else
                                {
                                    <text>Този модел е направен от нас за вас</text>
                                    <p></p>
                                }
                                <h5 style="text-align: right">@(template.Price + this.Model.Category.Price) лв</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="col-lg-3 col-sm-12 col-12  mt-3 mb-3">
        <h2 class="h1">&#160</h2>
        <vc:template-sub-categories category-id="@this.Model.CategoryId.Value"></vc:template-sub-categories>
    </div>

    <partial name="_TemplatePagingPartial" model="@this.Model" />
}
else
{
    <h1>В момента няма темплейти за този продукт/категория</h1>
}



