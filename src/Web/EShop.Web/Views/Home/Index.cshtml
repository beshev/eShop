@model IndexViewModel

@{
    this.ViewData["Title"] = "Начално";
}

<svg xmlns="http://www.w3.org/2000/svg" class="" width="100%" height="100%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
    <rect width="100%" height="80%" fill="#FFFFFF"></rect>
    <image href="./images/Nachalna.jpg" height="100%" width="100%"></image>
</svg>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @foreach (var template in this.Model.Templates)
        {
            <div class="carousel-item">
                <div class="card p-1 cardHover">
                    <a asp-area="" asp-controller="Templates" asp-action="Details" asp-route-templateId="@template.Id" asp-route-categoryId="@Model.TemplateCategoryId">
                        <svg xmlns="http://www.w3.org/2000/svg" class="" width="100%" height="100%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                            <rect width="100%" height="100%" fill="#FFFFFF"></rect>
                            <image href="@template.ImageUrl" height="100%" width="100%"></image>
                        </svg>
                        <div class="card-body p-1">
                            <p>@template.Description.TrimIfLongerThan(17)</p>
                            <h5 style="text-align: right">@template.Price лв</h5>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>