@model IndexViewModel

@{
    this.ViewData["Title"] = "Начално";
}
<div style="font-size: 200px" class="text-center">
    <h1>Добре дошли</h1>
    <h3>При ще нас откриете перфектния подарък</h3>
    <i class="fa-solid fa-gifts"></i>
</div>

<svg xmlns="http://www.w3.org/2000/svg" class="" width="100%" height="100%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
    <rect width="100%" height="80%" fill="#FFFFFF"></rect>
    <image href="./images/Nachalna.jpg" height="100%" width="100%"></image>
</svg>

<h3 class="text-center">Модели за @this.Model.TemplateCategoryName</h3>
<div id="carouselExampleControlsTemp" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner carousel-temp">
        @foreach (var template in this.Model.Templates)
        {
            <div class="carousel-item">
                <a asp-area="" asp-controller="Templates" asp-action="Details" asp-route-templateId="@template.Id" asp-route-categoryId="@Model.TemplateCategoryId">
                    <div class="card p-1 cardHover">
                        <svg xmlns="http://www.w3.org/2000/svg" class="" width="100%" height="100%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                            <rect width="100%" height="100%" fill="#FFFFFF"></rect>
                            <image href="@template.ImageUrl" height="100%" width="100%"></image>
                        </svg>
                        <div class="card-body p-1">
                            <p>@template.Name</p>
                            <h5 style="text-align: right">@(template.Price + this.Model.TemplateCategoryPrice) лв</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" id="carousel-control-prev-temp" data-bs-target="#carouselExampleControlsTemp" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" id="carousel-control-next-temp" data-bs-target="#carouselExampleControlsTemp" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<h3 class="text-center">Продукти</h3>
<div id="carouselExampleControlsProd" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner carousel-prod">
        @foreach (var product in this.Model.Products)
        {
            <div class="carousel-item">
                <a asp-area="" asp-controller="@GlobalConstants.ProductsController" asp-action="@GlobalConstants.DetailsAction" asp-route-productId="@product.Id">
                    <div class="card p-1 cardHover">
                        <svg xmlns="http://www.w3.org/2000/svg" class="" width="100%" height="100%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                            <rect width="100%" height="100%" fill="#FFFFFF"></rect>
                            <image href="@product.ImageUrl" height="100%" width="100%"></image>
                        </svg>
                        <div class="card-body p-1">
                           <p>@product.Name</p>
                            <h5 style="text-align: right">@product.Price лв</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" id="carousel-control-prev-prod" data-bs-target="#carouselExampleControlsProd" data-bs-slide="prev">
        <span class="carousel-control-prev-icon carousel-control-next-prod" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" id="carousel-control-next-prod" type="button" data-bs-target="#carouselExampleControlsProd" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="row text-center">
    <div class="col-12 col-sm-12 col-md-4 col-lg-4 mt-5">
        <i class="fa-solid fa-truck icon-size"></i>
        <h5 class="ap-icon-text-title"> Бърза Доставка до 2 работни дни.</h5>
        <div class="ap-icon-text-content"> Бърза доставка до 2 работни дни с куриерска фирма</div>
    </div>
    <div class="col-12 col-sm-12 col-md-4 col-lg-4 mt-5">
        <i class="fa-solid fa-lock icon-size"></i>
        <h5 class="ap-icon-text-title"> Сигурно плащане с опция преглед.</h5>
        <div class="ap-icon-text-content"> Плащане с наложен платеж с опция преглед преди заплащане</div>
    </div>
    <div class="col-12 col-sm-12 col-md-4 col-lg-4 mt-5">
        <i class="fa-solid fa-paintbrush icon-size"></i>
        <h5 class="ap-icon-text-title"> Гаранция за качество</h5>
        <div class="ap-icon-text-content"> Всеки произведен продукт отговаря на изискванията на клиента!</div>
    </div>
</div>