@model AllTemplatesViewModel

<nav aria-label="pagination">
    <ul class="pagination justify-content-center">
        <li class="page-item @if(Model.HasPreviousPage == false) { <text>disabled</text> }">
            <a class="page-link" 
            asp-area="@Model.Area"
            asp-controller="@Model.ForController" 
            asp-action="@Model.ForAction" 
            asp-route-id="@PagingViewModel.FirstPageNumber" 
            asp-route-subCategoryId=@this.Model.SubCategoryId
            asp-route-categoryId="@this.Model.CategoryId">
                &laquo;&laquo;
            </a>
        </li>
        <li class="page-item @if(Model.HasPreviousPage == false) {<text>disabled</text>}">
            <a class="page-link" 
            asp-area="@Model.Area"
            asp-controller="@Model.ForController" 
            asp-action="@Model.ForAction" 
            asp-route-id="@Model.PreviousPageNumber"
            asp-route-subCategoryId=@this.Model.SubCategoryId
            asp-route-categoryId="@this.Model.CategoryId">
                &laquo;
            </a>
        </li>
        @for (int i = Model.PageNumber - 2; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item">
                    <a class="page-link" 
                    asp-area="@Model.Area"
                    asp-controller="@Model.ForController" 
                    asp-action="@Model.ForAction" 
                    asp-route-id="@i"
                    asp-route-subCategoryId=@this.Model.SubCategoryId 
                    asp-route-categoryId="@this.Model.CategoryId">
                        @i
                    </a>
                </li>
            }
        }
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                @Model.PageNumber
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 2; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item">
                    <a class="page-link" 
                    asp-area="@Model.Area"
                    asp-controller="@Model.ForController" 
                    asp-action="@Model.ForAction" 
                    asp-route-id="@i"
                    asp-route-subCategoryId=@this.Model.SubCategoryId 
                    asp-route-categoryId="@this.Model.CategoryId">
                        @i
                    </a>
                </li>
            }
        }
        <li class="page-item @if(Model.HasNextPage == false) { <text>disabled</text> }">
            <a class="page-link"
            asp-area="@Model.Area"
            asp-controller="@Model.ForController" 
            asp-action="@Model.ForAction" 
            asp-route-id="@Model.NextPageNumber"
            asp-route-subCategoryId=@this.Model.SubCategoryId
            asp-route-categoryId="@this.Model.CategoryId">
                &raquo;
            </a>
        </li>
        <li class="page-item @if(Model.HasNextPage == false) {<text>disabled</text>}">
            <a class="page-link"
            asp-area="@Model.Area"
            asp-controller="@Model.ForController" 
            asp-action="@Model.ForAction" 
            asp-route-id="@Model.LastPageNumber"
            asp-route-subCategoryId=@this.Model.SubCategoryId
            asp-route-categoryId="@this.Model.CategoryId">
                &raquo;&raquo;
            </a>
        </li>
    </ul>
</nav>
