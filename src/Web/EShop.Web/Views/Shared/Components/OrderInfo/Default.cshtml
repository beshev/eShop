@model OrderInfoViewComponentModel

<div class="col-lg-5">
    <form asp-area="" asp-controller="Templates" asp-action="AddToCart" enctype="multipart/form-data">
        @if (this.Model.HasCustomText)
        {
            <div class="form-grup">
                <label asp-for="OrderInfo.Description"></label>
                <textarea asp-for="OrderInfo.Description" class="form-control" name="Description" placeholder="Template name..." rows="5" cols="5"></textarea>
                <span asp-validation-for="OrderInfo.Description" class="text-danger"></span>
            </div>
            <div class="form-grup mt-2">
                <label asp-for="OrderInfo.FontStyle"></label>
                <input asp-for="OrderInfo.FontStyle" class="form-control" name="FontStyle" type="number" />
                <span asp-validation-for="OrderInfo.FontStyle" class="text-danger"></span>
            </div>
        }

        @for (var i = 0; i < Model.ImagesCount; i++)
        {
            <input type="file" name="Images" class="form-control mt-2">
        }

        <div class="form-grup mt-2">
            <label asp-for="OrderInfo.Quantity"></label>
            <input asp-for="OrderInfo.Quantity" class="form-control" name="Quantity" type="number" />
            <span asp-validation-for="OrderInfo.Quantity" class="text-danger"></span>
        </div>

        <div class="form-grup" style="margin-top: 2%;">
            <input type="submit" class="btn btn-outline-dark" value="Add" />
        </div>
    </form>
</div>