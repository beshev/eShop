@using EShop.Web.ViewModels.Products
@model IEnumerable<SelectViewModel>

<div class="card">
    <div class="card-header text-center">Категории</div>
    <div class="card-body">
        <span class="badge bg-danger" style="margin-top: 2px">
            <a asp-area="" class="category-style"
               asp-controller="@GlobalConstants.TemplatesController"
               asp-action="@GlobalConstants.AllAction"
               asp-route-categoryId="@this.ViewData[GlobalConstants.NameOfCategory]"
               asp-route-id="1">Всички</a>
        </span>
        @foreach (var category in this.Model)
        {
            <span class="badge bg-danger" style="margin-top: 2px">
                <a class="category-style" 
                 asp-area="" 
                 asp-controller="@GlobalConstants.TemplatesController" 
                 asp-action="@GlobalConstants.AllAction"
                 asp-route-categoryId="@category.Id"
                 asp-route-id="1" class="category-style">@category.Name</a>
            </span>
        }
    </div>
</div>