@model IEnumerable<EShop.Web.ViewModels.ShoppingCarts.ShoppingCartModel>

@{
    ViewData["Title"] = "Количка";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FontStyle)
            </th>
            <th>
                Брой снимки
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in this.Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FontStyle)
                </td>
                <td>
                    @item.Images.Count()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a asp-area="" asp-action="RemoveItem" asp-controller="Cart" asp-route-id="@item.Id">Премахни</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h5>
    Total price: @this.Model.Sum(x => x.Price)
</h5>
<strong class="text-danger">Внимание! Доставката не е вкючена в крайната цена!</strong>

<a asp-area="" asp-controller="Orders" asp-action="ComplateOrder" class="btn btn-info @if(!this.Model.Any()){ <text>disabled</text> }" >Поръчай</a>