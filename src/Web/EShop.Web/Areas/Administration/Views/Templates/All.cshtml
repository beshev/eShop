@model IEnumerable<TemplateViewModel>

@{
    this.ViewData["Title"] = "Темплейти";
}

<a asp-area="Administration" asp-controller="Templates" asp-action="Add" class="btn btn-primary mb-2">Добави темплейт</a>
<form asp-area="Administration" asp-controller="Templates" asp-action="AddCategory">
    <span class="text-danger">@this.TempData[GlobalConstants.NameOfCategory]</span>

    <div class="form-group">
        <label>Създай категория</label>
        <input name="CategoryName" />
    </div>
    <div class="form-group">
        <input type="submit" value="Създай" />
    </div>
</form>

<form asp-area="Administration" asp-controller="Templates" asp-action="RemoveCategory">
    <vc:categories-select is-for-products="false"></vc:categories-select>
    <input type="submit" value="Премахни" class="btn btn-danger"/>
</form>

<table class="table table-bordered table-hover text-center mt-2">
    <thead>
        <tr>
            <th>@GlobalConstants.TemplateDisplayName</th>
            <th>@GlobalConstants.TemplateDisplayPrice</th>
            <th>@GlobalConstants.TemplateDisplayDescription</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var template in this.Model)
        {
            <tr>
                <td>@template.Name</td>
                <td>@template.Price.ToString("F2") лв.</td>
                <td>@template.Description</td>
                <td><a href="@template.ImageUrl" target="_blank">Снимка</a></td>
                <td>
                    <a asp-area="Administration" asp-controller="Templates" asp-action="Delete" asp-route-id="@template.Id">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>