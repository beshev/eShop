@model IEnumerable<OrderViewModel>

<h1>Поръчки</h1>

<table class="table table-sm table-bordered">
    @foreach (var order in this.Model)
    {
        @foreach (var item in order.OrderItems)
        {
            <tr>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.FontStyle
                </td>
                <td>
                    @item.TemplateName
                </td>
                <td>
                    @foreach (var imageUrl in item.Images)
                    {
                        <a href="@imageUrl" target="_blank">Снимка</a>
                    }
                </td>
            </tr>
        }
    }
</table>